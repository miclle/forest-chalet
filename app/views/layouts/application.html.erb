<!DOCTYPE html>
<html>
  <head>
    <title>ForestChalet</title>
    <%= csrf_meta_tags %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>

    <%= yield :head %>

  </head>
  <body>

    <aside>
      <div id="avatar-area"><a href="/"><%= image_tag gravatar("miclle.zheng@gmail.com", :size => 50), :alt => "Miclle Zheng" -%></a></div>

      <!-- <div id="vc-container" class="vc-container">
        <div class="vc-tape-wrapper">
          <div class="vc-tape">
            <div class="vc-tape-back">
              <div class="vc-tape-wheel vc-tape-wheel-left"><div></div></div>
              <div class="vc-tape-wheel vc-tape-wheel-right"><div></div></div>
            </div>
            <div class="vc-tape-front vc-tape-side-a"><span>A</span></div>
            <div class="vc-tape-front vc-tape-side-b"><span>B</span></div>
          </div>
        </div>
        <div class="vc-loader"></div>
      </div> -->
      <!-- //vc-container -->

      <section id="login">
        <%= form_tag sessions_path, :class => "clearfix" do %>

          <%= alert %>

          <ul class="clearfix">
            <li>
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email], :placeholder => "yourname@email.com", :required => true, :tabindex => 1 %>
            </li>

            <li>
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, :placeholder => "password", :required => true, :tabindex => 2 %>
            </li>

            <li>
              <%= submit_tag "Log in", :class => "btn", :tabindex => 3 %>
            </li>
          </ul>

        <% end %>
      </section>

      <section id="aside-footer">
        <div class="brand">
          <!-- <a href="http://markdown.miclle.com/" target="_blank"><i class="icon-music"></i></a> -->
          <%= link_to content_tag('i', nil, class: "icon-beaker"), projects_path %>
          <a href="http://github.com/miclle" target="_blank"><i class="icon-github-sign"></i></a>
          <a href="http://twitter.com/miclle" target="_blank"><i class="icon-twitter-sign"></i></a>
        </div>

        <div class="copyright">
          <span>&copy; Miclle.Zheng . Powered by</span> <a href="https://github.com/miclle/forest-chalet" target="_blank" title="Forest Chalet">Forest&nbsp;Chalet</a>
        </div>
      </section>

      <%= link_to content_tag('i', nil, class: "icon-cog"), "javascript:;", :id => "setting-icon" %>
    </aside>

    <section id="main" data-pjax-container>
      <%= yield %>
    </section>

    <a id="fork-me-on-github" href="https://github.com/miclle" target="_blank"><img src="http://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png" alt="Fork me on GitHub"></a>

    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-8236884-5']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

  </body>
</html>
