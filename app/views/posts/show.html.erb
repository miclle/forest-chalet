<!-- Content -->
<div id="content">

  <!-- Post -->
  <div class="post">

    <div class="title">
      <h2><%= @post.title %></h2>
      <span class="date"><%= @post.created_at.strftime("%Y年%m月%d日") %></span>
    </div>

    <div class="entry">
      <%= raw @post.content_html %>
    </div>
    <div class="post-meta">
      <p class="left">
        Posted in:
        <% @post.category_list.each do |category| %>
          <%= link_to category, {:controller => :posts, :action => :category, :name => category }%>
        <% end %>
      </p>
      <p class="right">
        <a href="#post-comment-anchor" class="comment-it">Be the newly to comment!</a>
        Comments: <span id="count-comment"><%= @post.comments_count %></span>
      </p>
      <div class="clear">&nbsp;</div>

      <p>Tags:
        <% @post.tag_list.each do |tag| %>
          <%= link_to tag, {:controller => :posts, :action => :tag, :name => tag } %>
        <% end %>
      </p>
      <div class="clear">&nbsp;</div>
    </div>

    <div class="line">&nbsp;</div>

    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'miclle'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>


  </div>
  <!-- End Post -->

</div>
<!-- End Content -->

<!-- Sidebar -->
<%#= render "sidebar" %>
<!-- End Sidebar -->